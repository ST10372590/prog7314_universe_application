<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header with maroon background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#800000"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Communication Hub"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Communication Hub"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stay connected with your learning community"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- App Logo -->
            <ImageView
                android:id="@+id/ivAppLogo"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_marginBottom="40dp"
                android:contentDescription="Universe App Logo"
                android:scaleType="centerInside"
                android:src="@drawable/unilogo" />

            <!-- Communication Options Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Direct Messages Button -->
                    <Button
                        android:id="@+id/btnDirectMessages"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#800000"
                        android:elevation="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Direct Messages"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawablePadding="12dp" />

                    <!-- Announcements Button -->
                    <Button
                        android:id="@+id/btnAnnouncements"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:backgroundTint="#800000"
                        android:elevation="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Announcements"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:drawableStart="@android:drawable/ic_menu_agenda"
                        android:drawablePadding="12dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Â© 2025 Universe App"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>