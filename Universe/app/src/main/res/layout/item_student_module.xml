<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvModuleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvContentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content Type"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvCompletionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completion Status"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvAssessmentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New assessment available!"
            android:textColor="#D32F2F"
            android:visibility="gone"
            android:paddingBottom="4dp"/>

        <Button
            android:id="@+id/btnViewAssessment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Assessment"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
