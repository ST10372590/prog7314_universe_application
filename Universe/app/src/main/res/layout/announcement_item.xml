<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header with maroon background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#800000"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Announcement Details"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Announcement Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title Section -->
                    <TextView
                        android:id="@+id/tvAnnouncementTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Announcement Title"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <!-- Module and Date Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:weightSum="2">

                        <!-- Module -->
                        <TextView
                            android:id="@+id/tvAnnouncementModule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Module: XYZ101"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:textStyle="bold" />

                        <!-- Date -->
                        <TextView
                            android:id="@+id/tvAnnouncementDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12 Nov 2025"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:gravity="end" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Content Section -->
                    <TextView
                        android:id="@+id/tvAnnouncementContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Announcement details go here. This is the full content of the announcement that provides all the necessary information to the students. It can include important updates, schedule changes, or any other relevant information."
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                    <!-- Posted By Section (Optional) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posted Announcement"
                            android:textSize="12sp"
                            android:textColor="#999999" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons (Optional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Share"
                    android:textColor="#800000"
                    android:backgroundTint="#FFFFFF"
                    android:textSize="14sp"
                    android:elevation="2dp"
                    android:drawableStart="@android:drawable/ic_menu_share"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Save"
                    android:textColor="#800000"
                    android:backgroundTint="#FFFFFF"
                    android:textSize="14sp"
                    android:elevation="2dp"
                    android:drawableStart="@android:drawable/ic_menu_save"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Â© 2025 Universe App"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>