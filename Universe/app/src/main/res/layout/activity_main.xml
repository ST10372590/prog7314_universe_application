<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6E0"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Logo at the top -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="193dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:contentDescription="App Logo"
        android:src="@drawable/unilogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App Title -->

    <!-- Summary -->

    <!-- Go to Register Button -->

    <!-- Go to Login Button -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Welcome to Universe"
        android:textAlignment="center"
        android:textColor="#800000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Universe is a platform for students and lecturers to connect, manage courses, submit claims, and stay updated with notifications. Explore and collaborate seamlessly."
        android:textColor="#4D0000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnGoRegister"
        android:layout_width="219dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#800000"
        android:padding="12dp"
        android:text="Go to Register"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSummary" />

    <Button
        android:id="@+id/btnGoLogin"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#800000"
        android:padding="12dp"
        android:text="Go to Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>
