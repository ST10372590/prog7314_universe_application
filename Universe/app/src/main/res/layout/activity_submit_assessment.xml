<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".SubmitAssessmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/tvSubmitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Assessment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#800000"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

        <!-- Card-style content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <!-- Assessment Info -->
            <TextView
                android:id="@+id/tvAssessmentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please upload your assessment file below."
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingBottom="8dp"
                android:gravity="center_horizontal" />

            <!-- Due Date -->
            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date: --/--/----"
                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="#B22222"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp" />

            <!-- Countdown -->
            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time remaining: --"
                android:textSize="15sp"
                android:textColor="#444444"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Instructions -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission Guidelines:\n\n• You may submit multiple times — only your **last submission** will be graded.\n• Late submissions (after the due date) will incur a **mark deduction** penalty.\n• Do **not** submit plagiarized or copied work — such submissions will be disqualified."
                android:textSize="14sp"
                android:textColor="#444444"
                android:background="#FFF5F5"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:gravity="start" />

            <!-- Notes -->
            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a comment (optional)"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:padding="10dp"
                android:textColor="#222222"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp" />

            <!-- File Select Button -->
            <Button
                android:id="@+id/btnSelectFile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Choose File"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#B22222"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:layout_marginBottom="10dp" />

            <!-- Selected File -->
            <TextView
                android:id="@+id/tvSelectedFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file chosen"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="14dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitWork"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Submit Assessment"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#800000"
                android:layout_gravity="center"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
