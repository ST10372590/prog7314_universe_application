<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studentDashboardRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".StudentDashboardActivity">

    <!-- Header with maroon background -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#800000"
        android:gravity="center_vertical"
        android:weightSum="3">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDashboardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Student Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- My Submissions Button -->
        <ImageButton
            android:id="@+id/btnMySubmissions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.75"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="My Submissions"
            android:src="@drawable/ic_submissions"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Notifications Button -->
        <ImageButton
            android:id="@+id/btnNotifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.75"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Notifications"
            android:src="@drawable/ic_notifications"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Enrolled Courses Section -->
    <TextView
        android:id="@+id/tvEnrolledHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Enrolled Courses"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <!-- Message for no enrolled courses -->
    <TextView
        android:id="@+id/tvNoEnrolledCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are not enrolled in any courses yet."
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp" />

    <!-- RecyclerView for enrolled courses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEnrolledCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginVertical="8dp" />

    <!-- All Available Courses Section -->
    <TextView
        android:id="@+id/tvAllCoursesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Courses"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <!-- RecyclerView for all courses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllCourses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@drawable/bottom_nav_menu" />

</LinearLayout>
